{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@topical-ehr/*": ["./packages/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
